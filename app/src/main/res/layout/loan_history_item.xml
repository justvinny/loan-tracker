<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    app:layout_goneMarginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_loan_description_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="16dp"
            android:text="@string/text_loan_description_header"
            android:textSize="16sp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/text_loan_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/text_loan_description_header"
            android:text="@string/text_description_sample"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_loan_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_loan_description"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/text_date_example"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_loan_history_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_loan_description"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/text_amount_example"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>