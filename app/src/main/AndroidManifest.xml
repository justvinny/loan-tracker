<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loantracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoanTracker">
        <activity android:name=".ui.CreateLoanActivity"
            android:parentActivityName=".ui.LoanActivity"
            android:label="Add a new loan"/>
        <activity android:name=".ui.UpdateLoanActivity"
            android:parentActivityName=".ui.LoanActivity"
            android:label="Update a current loan"/>

        <activity android:name=".ui.LoanActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>